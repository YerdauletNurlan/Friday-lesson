vrrp_script check_haproxy {
  script "/bin/pidof haproxy"
  interval 2 # every 2 seconds
}

vrrp_instance inst1 {
   interface eth1
   state MASTER        
   priority 100
   virtual_router_id 101
   unicast_src_ip 192.167.100.11 #master ip

    unicast_peer {
        192.167.100.13 backup ip
    }

   authentication {
       auth_type PASS
       auth_pass 1234
   }
  
   virtual_ipaddress {
      192.167.100.200
   }

   track_script {
      check_haproxy
   }

}
